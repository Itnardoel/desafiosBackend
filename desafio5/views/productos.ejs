<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>
    <div class="d-grid col-4 bg-light">
        <h2 class="text-primary ms-3 mt-2">Vista de Productos</h2>
        <% if (isEmpty === 0) { %>
            <h3 class="ms-3 mt-2 me-3 mb-3 bg-warning bg-opacity-10" style="color:#8B8000">No hay Productos</h3>
        <% } %>
        <% if (isEmpty > 0) { %>
            <table class="table table-dark align-middle d-flex me-3 ms-3">
            <tr>
                <th>Nombre</th>
                <th class="text-center">Precio</th>
                <th class="text-center">Foto</th>
            </tr>
            <% productos.forEach(function(prod) { %>
                <tr>
                    <td class="align-middle"><%= prod.title %></td>
                    <td class="text-center align-middle"><%= prod.price %></td>
                    <td class="text-center align-middle"><img style="width: 25%" src=<%= prod.thumbnail %> alt=""></td>
                </tr>
            <% }); %>
            </table>
        <% } %>
        <button class="d-grid col-2 mb-3 ms-3 btn btn-secondary"><a style="text-decoration: none; color: white" href="http://localhost:8080">Volver</a></button>
    </div>
</body>
</html>